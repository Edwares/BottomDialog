<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/clearColor"
    android:gravity="bottom">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:textSize="12sp"
        android:gravity="center"
        android:background="@color/white_80per"
        android:textColor="@color/lightGrayColor"
        android:text="这里是标题"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/groupTableViewColor"
        android:layout_height="1px"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:overScrollMode="never"
        android:background="@color/clearColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/groupTableViewColor"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/tv_destory"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:visibility="gone"
        android:background="@drawable/sel_white_tv"
        android:text="取消"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:background="@color/groupTableViewColor"
        android:layout_height="6dp"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@drawable/sel_white_tv"
        android:textColor="@color/black"
        android:text="取消"/>
</LinearLayout>